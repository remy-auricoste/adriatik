{
  "dist": "dist",
  "modules": {
    "main": {
      "src": "src",
      "browserify": {
        "entry": "main.js",
        "output": "bundle.js"
      },
      "concat": {
        "css": "bundle.css"
      },
      "sass": {
        "entry": "main.scss",
        "output": "bundle-sass.css"
      },
      "assets": ["txt", "jpg", "ttf", "png", "html"],
      "watch": true
    },
    "libs": {
      "src": "lib",
      "browserify": {
        "entry": "node/all.js",
        "output": "libs.js"
      },
      "watch": true
    }
  }
}
